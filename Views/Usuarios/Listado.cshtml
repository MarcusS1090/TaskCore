@model UsuariosListadoViewModel

@{
	ViewData["Title"] = "Listado de Usuarios";
	Layout = "../shared/_layout";

}
<h1>Listado de usuarios</h1>

@if (Model.Mensaje is not null)
{
	<div class="alert alet-success" role="alert">
		@Model.Mensaje
	</div>	
}

@if (Model.Mensaje is not null)
{
	<form method="post">
		<table class="table table-hover">
			<thead>
				<tr>
					<td>Accion</td>
					<td>Email</td>
				</tr>
			</thead>
			<tbody>
				@foreach (var usuario in Model.Usuarios)
				{
					<tr>
						<td>
							<button class="btn btn-primary me-2"
								asp-action="HacerAdmin" asp-route-email="@usuario.Email">
									Hacer Administrador
							</button>
							<button class="btn btn-danger me-2"
									asp-action="RemoverAdmin" asp-route-email="@usuario.Email">
								Remover Administrador
							</button>
						</td>
						<td>
							@usuario.Email
						</td>
					</tr>
				}
			</tbody>
		</table>
	</form>
}
else
{
	<p> No hay usuarios para mostrar.</p>	
}