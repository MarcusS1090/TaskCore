@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<ul class="navbar-nav">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<span class="nav-link text-dark"> Hola, @User.Identity.Name!</span>
		</li>
		<li class="nav-item">
			<form class="form-check-inline" asp-action="logout" asp-controller="usuarios">
				<button type="submit" class="nav-link btn btn-link text-dark"> Cerrar Sesion</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="usuarios" asp-action="Registro">Registrarse</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="usuarios" asp-action="Login">Iniciar sesion</a>
		</li>
	}
</ul>